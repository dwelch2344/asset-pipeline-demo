<?xml version="1.0" encoding="UTF-8"?>
<configuration>
 
  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <layout class="ch.qos.logback.classic.PatternLayout">
      <Pattern> %-5level - %logger{36}    @  %d{HH:mm:ss.SSS} [%thread] \n\t\t %msg%n</Pattern>
    </layout>
  </appender>
   
  <logger name="co.ntier.example.asset" level="INFO"/>
   
 
  <root level="WARN">
    <appender-ref ref="STDOUT" />
  </root>
</configuration>